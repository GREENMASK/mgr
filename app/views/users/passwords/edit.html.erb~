<% content_for :title, "Zmień hasło"%>
<div class="session_form">
<center>
<h2>Zmień hasło</h2>

<%# raise :reset_password_token.inspect %>
<%= form_for(resource,:as=>resource_name, :url => password_path(resource_name.downcase), :html => { :method => :put }) do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <div><%= f.label :password, "Nowe hasło" %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation, "Powtwierdź nowe hasło" %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Zmień hasło" %></div>
<% end %>
</center>
</div>
