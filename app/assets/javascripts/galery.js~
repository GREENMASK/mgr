$(document).ready(function(){
  $("a[rel=image_group]").fancybox({
    'transitionIn'        :'none',
    'transitionOut'       :'none',
    'titlePosition'       :'over',
    'titleFormat'         :function(title,currentArray,currentIndex,currentOpts){
    return '<span id="fancybox-title-over">'+ title +'</br></br>Image ' +  (currentIndex + 1) + ' / ' + currentArray.length + '</span>';
    }
  });
})
