// linki menu
@mixin header_menu_style($font_size,$bottom){
      @if $bottom{
        ul{
          background:#F2F2F2;
          padding: 5px 0;
          text-align:center;
          border-radius: 25px;
          -moz-border-radius:25px;
          -webkit-border-radius:25px;
          -o-border-radius:25px;
          box-shadow: 0 0 10px #F2F2F2;
          -mox-box-shadow: 0 0 10px #F2F2F2;
          -webkit-box-shadow: 0 0 10px #F2F2F2;
          -o-box-shadow: 0 0 10px #F2F2F2;
        }
      }
      li{
      list-style:none;
      padding: 0 10px 0 10px;
      
      @if $bottom{
        border-left: 1px solid white;
      }
      a{
        text-decoration:none;
        text-transform:lowercase;
        font-family:"Arial",sans-serif;
        font-size:$font_size;
        font-weight: bold;
        font-style: italic;
        color: #3b3d34;
       }

      a:hover{
        color: white;
        padding:4px 3px;
        background:#3b3d34;
        border-radius: 25px;
        -webkit-border-radius: 25px;
        -moz-border-radius: 25px;
        text-shadow: #be0df2 0px 0px 20px;
        -moz-text-shadow: #be0df2 0px 0px 20px;
        -webkit-text-shadow: #be0df2 0 0 20px;
      }
    }
    
  @if $bottom{
    li:first-child{
      border:none;
    }
  }
}


